[Unit]
Description = Deichwave GPIO
After = deichwave.service
Requires = deichwave.service pigpiod.service

[Service]
ExecStart = python3 /home/dietpi/scripts/gpio.py
WorkingDirectory=/home/dietpi/
Type = simple
RemainAfterExit=no
Restart=on-failure
RestartSec=5

[Install]
WantedBy = multi-user.target
